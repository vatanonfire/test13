# Frontend Environment Variables
# Bu dosyayı .env.local olarak kopyalayın ve değerleri doldurun

# Backend API URL - Local development için localhost, production için gerçek URL
NEXT_PUBLIC_API_URL=http://localhost:5000

# Frontend URL - Local development için localhost, production için gerçek URL
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Google Analytics (opsiyonel)
NEXT_PUBLIC_GA_ID=

# Stripe Public Key (opsiyonel)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# OpenAI API Key (opsiyonel) - Backend'de kullanılır
NEXT_PUBLIC_OPENAI_API_KEY=

# App Environment
NODE_ENV=production

# Build Configuration
NEXT_TELEMETRY_DISABLED=1

